<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context="com.example.hamzasaleem.hci_new.Home">





    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagesale"
        android:layout_height="280dp"
        android:layout_width="380dp"
        app:riv_corner_radius="5dip"
        android:src="@drawable/ssaless"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        app:riv_oval="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="saleBtn"

        />




    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagesale1"
        android:layout_height="180dp"
        android:layout_width="180dp"
        app:riv_corner_radius="5dip"
        android:src="@drawable/cart"
        app:riv_mutate_background="true"
        android:layout_marginBottom="10dp"
        app:riv_tile_mode="repeat"
        app:riv_oval="false"
        android:onClick="CancelOrderBtn"

        android:layout_alignBottom="@+id/imagesale2"
        android:layout_alignEnd="@+id/imagesale" />



    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagesale2"
        android:layout_height="210dp"
        android:layout_width="180dp"
        app:riv_corner_radius="5dip"
        android:layout_marginTop="20dp"
        android:src="@drawable/cccart"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        app:riv_oval="false"
        android:onClick="categoryBtn"

        android:layout_below="@+id/imagesale"
        android:layout_alignStart="@+id/imagesale" />








</RelativeLayout>
